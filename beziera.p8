pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
bPoints="\
    60,50,120,50,120,70,60,70,\
    50,60,37,60,37,80,50,80,\
    50,60,63,60,63,80,50,80,\
    50,40,37,40,37,60,50,60,\
    50,40,63,40,63,60,50,60"

t=0
c=1
function _init()    
    bPoints=split(bPoints)
end
function _update()
    t+=0.02
    if t>1 then t=0 end
    c+=1
    if c>15 then c=1 end
end
function calc_point(i,offset)
    x=bPoints[1+offset*8]*(1-i)*(1-i)*(1-i)
    x+=3*bPoints[3+offset*8]*i*(1-i)*(1-i)
    x+=3*bPoints[5+offset*8]*i*i*(1-i)
    x+=bPoints[7+offset*8]*i*i*i

    y=bPoints[2+offset*8]*(1-i)*(1-i)*(1-i)
    y+=3*bPoints[4+offset*8]*i*(1-i)*(1-i)
    y+=3*bPoints[6+offset*8]*i*i*(1-i)
    y+=bPoints[8+offset*8]*i*i*i

    return flr(x+0.5),flr(y+0.5)
end
function _draw()
    cls()
    for j=0,4 do
        for i=0,t,0.01 do
            x,y=calc_point(i,j)
            pset(x,y,c)
        end
    end
end
